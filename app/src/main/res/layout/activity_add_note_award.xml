<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddNoteActivityVolunteering">

    <EditText
        android:id="@+id/edit_text_title_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_text_description_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"/>

    <TextView
        android:id="@+id/textView2_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_received"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_date_received"
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>